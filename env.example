# ================================
# Goose Slackbot Environment Configuration
# Copy this file to .env and update with your values
# ================================

# ================================
# SLACK CONFIGURATION
# ================================
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_ADMIN_CHANNEL=C01234567

# ================================
# APPLICATION CONFIGURATION
# ================================
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=3000
WORKERS=4

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://goose_user:goose_password@localhost:5432/goose_slackbot
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# PostgreSQL (for Docker Compose)
POSTGRES_DB=goose_slackbot
POSTGRES_USER=goose_user
POSTGRES_PASSWORD=change-this-password-in-production

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_URL=redis://:redis_password@localhost:6379/0
REDIS_PASSWORD=change-this-password-in-production
REDIS_SESSION_TTL=3600
REDIS_CACHE_TTL=1800

# ================================
# SECURITY CONFIGURATION
# ================================
# Generate with: openssl rand -base64 64
JWT_SECRET_KEY=change-this-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=change-this-encryption-key-in-production

# Rate Limiting
RATE_LIMIT_PER_USER_PER_MINUTE=10
RATE_LIMIT_GLOBAL_PER_MINUTE=100

# ================================
# GOOSE INTEGRATION
# ================================
GOOSE_MCP_SERVER_URL=http://localhost:8000
GOOSE_MCP_TIMEOUT=300
GOOSE_MAX_CONCURRENT_QUERIES=10
GOOSE_EXECUTABLE_PATH=/usr/local/bin/goose

# ================================
# SNOWFLAKE CONFIGURATION
# ================================
SNOWFLAKE_ACCOUNT=your-account.snowflakecomputing.com
SNOWFLAKE_USER=your-snowflake-user
SNOWFLAKE_PASSWORD=your-snowflake-password
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=ANALYTICS
SNOWFLAKE_SCHEMA=PUBLIC

# ================================
# LDAP AUTHENTICATION (Optional)
# ================================
LDAP_SERVER=ldap://ldap.example.com:389
LDAP_BASE_DN=dc=example,dc=com
LDAP_BIND_USER=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=ldap-password

# ================================
# USER MAPPING SERVICE (Optional)
# ================================
USER_MAPPING_SERVICE_URL=https://user-mapping.example.com
USER_MAPPING_API_KEY=your-api-key

# ================================
# LOGGING AND MONITORING
# ================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Sentry (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================================
# FEATURE FLAGS
# ================================
ENABLE_QUERY_HISTORY=true
ENABLE_QUERY_SHARING=true
ENABLE_INTERACTIVE_BUTTONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_THREAD_MANAGEMENT=true
ENABLE_USER_PERMISSIONS=true

# ================================
# PERFORMANCE TUNING
# ================================
MAX_RESULT_ROWS=10000
MAX_INLINE_ROWS=10
QUERY_TIMEOUT_SECONDS=300
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=csv,xlsx,json

# ================================
# DEVELOPMENT SETTINGS
# ================================
MOCK_MODE=false
MOCK_DELAY_SECONDS=2
AUTO_RELOAD=false

# ================================
# DOCKER COMPOSE SETTINGS
# ================================
APP_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379
PROMETHEUS_PORT=9091
GRAFANA_PORT=3001
ALERTMANAGER_PORT=9093

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Data directory for volumes
DATA_DIR=./data

# ================================
# KUBERNETES SETTINGS
# ================================
IMAGE_NAME=goose-slackbot
IMAGE_TAG=latest
DOCKER_REGISTRY=

# ================================
# BACKUP SETTINGS
# ================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
